{
  "name": "pcm-project",
  "version": "1.0.0",
  "description": "PCM (Personnel Career Management) System - A comprehensive personnel management system",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "type-check": "npm run type-check --workspace=apps/web",
    "test": "npm run test --workspace=apps/web",
    "test:unit": "jest --config=apps/web/jest.config.js",
    "test:integration": "jest --config=apps/web/jest.integration.config.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "db:seed": "node scripts/seed-runner.js"
  },
  "keywords": [
    "personnel-management",
    "career-management",
    "next.js",
    "typescript",
    "oracle",
    "monorepo"
  ],
  "author": "PCM Development Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}